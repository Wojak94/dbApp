<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Bike Number</th>
      <th>Station</th>
      <th>Bike status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bikes.each do |bike| %>
      <tr>
        <td><%= bike.id %></td>
        <td><%= bike.station.location.street %> <%= bike.station.location.flat_number %></td>
        <td><%= bike.bike_status %></td>
        <td><%= link_to 'Show', bike %></td>
        <td><%= link_to 'Edit', edit_bike_path(bike) %></td>
        <td><%= link_to 'Destroy', bike, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bike', new_bike_path %>
