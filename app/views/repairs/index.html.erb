<p id="notice"><%= notice %></p>

<h1>Listing Repairs</h1>

<table>
  <thead>
    <tr>
      <th>Bike</th>
      <th>Serviceman</th>
      <th>Start time</th>
      <th>End time</th>
      <th>Repair status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @repairs.each do |repair| %>
      <tr>
        <td><%= repair.bike_id %></td>
        <td><%= repair.serviceman_id %></td>
        <td><%= repair.start_time %></td>
        <td><%= repair.end_time %></td>
        <td><%= repair.repair_status %></td>
        <td><%= link_to 'Show', repair %></td>
        <td><%= link_to 'Edit', edit_repair_path(repair) %></td>
        <td><%= link_to 'Destroy', repair, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

