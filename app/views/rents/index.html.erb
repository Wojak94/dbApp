<p id="notice"><%= notice %></p>

<h1>Listing Rents</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Bike</th>
      <th>Rent place</th>
      <th>Return place</th>
      <th>Rent time</th>
      <th>Return time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rents.each do |rent| %>
      <tr>
        <td><%= rent.user_id %></td>
        <td><%= rent.bike_id %></td>
        <td><%= rent.rent_place %></td>
        <td><%= rent.return_place %></td>
        <td><%= rent.rent_time %></td>
        <td><%= rent.return_time %></td>
        <td><%= link_to 'Show', rent %></td>
        <td><%= link_to 'Edit', edit_rent_path(rent) %></td>
        <td><%= link_to 'Destroy', rent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

