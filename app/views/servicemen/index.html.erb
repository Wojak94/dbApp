<p id="notice"><%= notice %></p>

<h1>Listing Servicemen</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @servicemen.each do |serviceman| %>
      <tr>
        <td><%= serviceman.status %></td>
        <td><%= link_to 'Show', serviceman %></td>
        <td><%= link_to 'Edit', edit_serviceman_path(serviceman) %></td>
        <td><%= link_to 'Destroy', serviceman, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

